{
  "meta": {
    "name": "elegant",
    "description": "CartÃ£o elegante com sidebar",
    "width": 800,
    "height": 400,
    "useTemplateImage": true,
    "layers": ["background", "template", "avatar", "texts", "icons", "sidebar"]
  },

  "avatar": {
    "x": 50,
    "y": 100,
    "size": 120,
    "shape": "circle",
    "radius": 999,
    "border": {
      "width": 4,
      "color": "#ffffff"
    },
    "shadow": {
      "enabled": true,
      "blur": 12,
      "color": "rgba(0,0,0,0.45)"
    }
  },

  "username": {
    "enabled": true,
    "x": 200,
    "y": 120,
    "font": "600 34px 'Arial'",
    "color": "#ffffff",
    "maxWidth": 450
  },

  "tag": {
    "enabled": true,
    "x": 200,
    "y": 155,
    "font": "22px 'Sans'",
    "color": "#cccccc",
    "prefix": "#"
  },

  "bio": {
    "enabled": true,
    "x": 200,
    "y": 190,
    "font": "19px 'Sans'",
    "color": "#dddddd",
    "maxWidth": 500,
    "maxLines": 3
  },

  "stats": {
    "enabled": true,
    "x": 200,
    "y": 250,
    "barWidth": 340,
    "barHeight": 20,
    "levelFont": "20px 'Sans'",
    "textColor": "#ffffff",
    "barBackground": "#333333",
    "barFill": "#00cc88",
    "barBorder": "#ffffff",
    "roundness": 10,
    "showXPText": true,
    "showLevelText": true,
    "labelFormat": "Lv. {level} â€¢ {xp}/{maxXP}"
  },

  "coins": {
    "enabled": true,
    "x": 200,
    "y": 320,
    "font": "22px 'Sans'",
    "color": "#ffdd00",
    "iconSize": 26,
    "gap": 8,
    "fallbackIcon": "ðŸ’°",
    "icon": "{coinIcon}"
  },

  "sidebar": {
    "enabled": true,
    "x": 600,
    "y": 20,
    "width": 170,
    "height": 360,
    "radius": 16,
    "color": "rgba(0,0,0,0.35)",
    "orientation": "vertical",
    "padding": 14,
    "shadow": {
      "enabled": true,
      "blur": 10,
      "color": "rgba(0,0,0,0.4)"
    },
    "items": [
      {
        "type": "text",
        "text": "Membro desde",
        "font": "14px 'Sans'",
        "color": "#aaaaaa",
        "yOffset": 0
      },
      {
        "type": "dynamicText",
        "field": "memberSince",
        "font": "16px 'Sans'",
        "color": "#ffffff",
        "yOffset": 24
      }
    ]
  }
}
